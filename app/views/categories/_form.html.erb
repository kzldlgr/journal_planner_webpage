
<%= form_with model: @category, local: true do |form| %>
    <% if category.errors.any? %>
        <div style="color: red">
            <h3><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved: </h3>
            
            <ul>
                <% category.errors.full.message.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :category_name, style: "display: block" %>
        <%= form.text_field :category_name %>
    </div>
    <div>
        <%= form.label :user_id, style: "display: block" %>
        <%= form.text_field :user_id, id: :category_user_id, value: current_user.id %>
    </div>

    <div>
        <%= form.submit %>
    </div>
    
<% end %>

<%= link_to "Back", categories_path %>