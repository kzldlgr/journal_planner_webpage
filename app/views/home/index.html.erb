<div class="container col">
<>
<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% if user_signed_in? %>
<%= link_to "New task", categories_path, class:'btn btn-secondary' %>

<%= link_to "Show all categories", categories_path, class:'btn btn-secondary'  %>

<%= link_to "Add new category", new_category_path, class:'btn btn-secondary'  %>

<br/><br/>


<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Task</th>
            <th>Description</th>
            <th>Category</th>
            <th>Status</th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.id %></td>
            <td><%= task.task_name %></td>
            <td><%= task.task_body %></td>
            <% if task.status = 0%>
            <td><%= "Pending" %></td>
            <% else %>
            <td><%= "Completed" %></td>
            <% end %>
        </tr>     
        <% end %>
    </tbody>
</table>

<% end %> 