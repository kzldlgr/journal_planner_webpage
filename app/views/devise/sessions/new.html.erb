<div class="position-absolute top-50 start-50 translate-middle">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="card bg-secondary bg-gradient p-3 shadow  rounded" style="width: 24rem;">

  <div class="card-header bg-dark bg-gradient text-white fs-3 text-center">
    Login
  </div>
  
  <div class="card-body">
    <div class="col-sm-12">
      <% f.label :email %>
      <%= f.email_field :email, class: 'form-control my-4', placeholder: "Email" %>
    </div>

    <div class="field">
      <% f.label :password %>
      <%= f.password_field :password, class: 'form-control my-4', placeholder: "Password"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class:"form-check-input" %>
        <%= f.label :remember_me, class:"form-check-label" %>
      </div>
    <% end %>
  </div> 

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="card-body">
      <div class="d-flex justify-content-center">
      <%= f.submit "Log in", class:"btn btn-dark fw-bold", style:"width: 100%" %>
      </div>
      <div class="mt-2">
      <%= render "devise/shared/links" %>
      </div>
    </div>
    




<% end %>


</div>
</div>