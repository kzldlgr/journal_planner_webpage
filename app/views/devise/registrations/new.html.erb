<div class="position-absolute top-50 start-50 translate-middle">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="card">
  <div class="card-header bg-dark text-white fs-3 text-center" style="width: 20rem;">
    Sign up
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card-body">
    <div class="col-sm-12">
    <% f.label :email %>
    <%= f.email_field :email, class: 'form-control mb-2', placeholder: "Email"  %>
  </div>

  <div class="field">
    <% f.label :password %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %> </em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control mb-2', placeholder: "Password (6 characters minimum)"  %>
  </div>

  <div class="field">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control mb-2', placeholder: "Password Confirmation"  %>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="actions mt-4">
    <%= f.submit "Sign up", class:"btn btn-dark" %>
  </div>

  <div class="form mt-2">
    <%= link_to "Cancel", new_session_path(resource_name), class:"btn btn-danger" %>
  </div>

<% end %>

