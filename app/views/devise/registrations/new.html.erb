<div class="position-absolute top-50 start-50 translate-middle">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="card bg-secondary bg-gradient p-3 shadow  rounded" style="width: 24rem;">

  <div class="card-header bg-dark bg-gradient text-white fs-3 text-center">
    Sign up
  </div>

  <div class="card-body">
    <div class="col-sm-12">
      <% f.label :email %>
      <%= f.email_field :email, class: 'form-control mt-4', placeholder: "Email"  %>
    </div>

    <div class="field">
      <% f.label :password %>
      <% if @minimum_password_length %>
      <em><% @minimum_password_length %> </em>
      <% end %><br />
      <%= f.password_field :password, class: 'form-control my-1', placeholder: "Password (6 characters minimum)"  %>
    </div>

    <div class="field">
      <% f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: 'form-control my-1', placeholder: "Password Confirmation"  %>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="card-body">
    <div class="d-flex gap-2">
      <%= f.submit "Sign up", class:"btn btn-dark fw-bold", style:"width: 100%" %>
      <%= link_to "Cancel", new_session_path(resource_name), class:"btn btn-danger fw-bold", style:"width: 100%"  %>
    </div>
  </div>

<% end %>

